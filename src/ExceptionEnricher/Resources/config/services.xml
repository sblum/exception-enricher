<?xml version="1.0" encoding="UTF-8" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="doctrine_cache.apc.class">Doctrine\Common\Cache\ApcCache</parameter>
    </parameters>

    <services>
        <service id="sblum.exception_enricher" class="ExceptionEnricher\Processor\ExceptionEnricherProcessor">
            <argument type="service" id="request_stack" />
            <argument type="service" id="session" />
            <argument type="service">
                <service class="Symfony\Component\Security\Core\Security" />
            </argument>
            <tag name="monolog.processor" />
        </service>
    </services>

</container>
